.nav-blocks
	display flex
	justify-content space-around
	max-width 1000px
	padding-bottom 6vw
	width 90%
				
.nav-block
	align-items center
	display flex
	flex-basis 30%
	height 27vw // 90% * .3
	justify-content center
	max-height 300px
	overflow hidden
	position relative
	text-decoration none
	
	&__image
		border 0
		height 100%
		position absolute
		transform scale(1.1)
		transition all .35s ease
		z-index -1
		
	&__text
		color white
		display block
		font-family playfair
		font-size 2.4vw
		font-weight normal
		padding 10%
		text-align center
		text-transform uppercase
		z-index 10
	
	&:after
		background-color rgba(0,0,0,.4)
		content ''
		height 100%
		position absolute
		transition all .35s ease
		width 100%
		
	&:hover	
		.nav-block__image
			transform scale(1)
			
		.nav-block:after
			background-color rgba(0,0,0,.7)