.header
	display flex
	flex-wrap wrap
	width 100%
	justify-content center
    
	&__title
		font-family playfair
		font-weight normal
		width 100%
		font-size 5vw
		display flex
		justify-content center
		margin 5vw 0 0
	
	&__link
		text-decoration none
	
	&__phone
		text-decoration none
		font-size 4vw
		padding 0 0 4vw
				
@media all and (min-width: 980px)

	.header
		&__title
			font-size 2.5vw
			margin-bottom 2vw
			
		&__phone
			position absolute
			right 20px
			top 20px
			text-decoration none
			font-size 16px