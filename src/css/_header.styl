.header
	display flex
	flex-wrap wrap
	width 100%
	justify-content center
    
	&__title
		font-family playfair
		font-weight normal
		width 100%
		font-size 2.5vw
		display flex
		justify-content center
		margin 5vw 0 2vw
		
.banner 
	margin-bottom 5vw
		
	&__image 
		width 100%

.page-banner
	position relative
	display flex
	margin-bottom 6vw
	
	&__image
		width 100%
		height 100%
	
	&:after
		content ''
		width 100%
		height 100%
		background-color rgba(0,0,0,.4)
		position absolute
		top 0
		left 0
		
	
	&__title
		color white
		width 100%
		text-align center
		top 60%
		font-family playfair
		font-weight normal
		font-size 3vw
		position absolute
		z-index 10