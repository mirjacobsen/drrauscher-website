.header
	display flex
	flex-wrap wrap
	width 100%
	justify-content center
    
	&__title
		font-family playfair
		font-weight normal
		width 100%
		font-size 5vw
		display flex
		justify-content center
		margin 5vw 0 0
	
	&__link
		text-decoration none
	
	&__phone
		text-decoration none
		font-size 4vw
		padding 0 0 4vw
		
.banner
	display flex
	align-items flex-start
	width 100%
	order 1

	&__image
		width 100%

.page-banner
	position relative
	// display flex
	margin-bottom 6vw
	width 100%
	height 25vw
	overflow hidden
	
	&__image
		width 100%
		// height 100%
		height auto
	
	&:after
		content ''
		width 100%
		height 100%
		background-color rgba(0,0,0,.5)
		position absolute
		top 0
		left 0
	
	&__title
		color white
		width 100%
		text-align center
		top 20%
		left 0
		font-family playfair
		font-weight normal
		text-transform capitalize
		font-size 6vw
		position absolute
		z-index 10
		
@media all and (min-width: 980px)

	.header
		
		&__title
			font-size 2.5vw
			margin-bottom 2vw
			
		&__phone
			position absolute
			right 20px
			top 20px
			text-decoration none
			font-size 16px

	.banner 
		margin-bottom 5vw
		height auto
			
		&__image 
			width 100%
			height auto


	.page-banner__title
		top 60%
		font-size 3vw