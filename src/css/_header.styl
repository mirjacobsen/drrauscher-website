.header
	display flex
	flex-wrap wrap
	width 100%
	justify-content center
    
	&__title
		font-family playfair
		font-weight normal
		width 100%
		font-size 2.5vw
		display flex
		justify-content center
		margin 5vw 0 2vw
	
	&__link
		text-decoration none
		
.banner
	min-height 25vh
	max-height 25vw
	margin-bottom 5vh
	max-width 100%
	order 1

	&__image
		height 100%
		width auto

.page-banner
	position relative
	display flex
	margin-bottom 6vw
	
	&__image
		width 100%
		height 100%
	
	&:after
		content ''
		width 100%
		height 100%
		background-color rgba(0,0,0,.4)
		position absolute
		top 0
		left 0
		
	
	&__title
		color white
		width 100%
		text-align center
		top 20%
		font-family playfair
		font-weight normal
		font-size 5vw
		position absolute
		z-index 10
		
@media all and (min-width: 980px)

	.banner 
		margin-bottom 5vw
		height auto
			
		&__image 
			width 100%
			height auto


	.page-banner__title
		top 60%
		font-size 3vw