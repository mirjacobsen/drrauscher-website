@require './_variables.styl'

.navigation
	margin-bottom 3vw
	transform translateX(-105vw)
	transition all .4s ease-in-out
	height 100vh
	width 100%
	background lightGreen
	color white
	position fixed
	left 0
	top 0
	z-index 100000
	
	&__list
		display flex
		justify-content center
		padding-left 0
		text-transform uppercase
		width 100%
		flex-direction column
		font-size 4vw
		margin-top 10vw
		
		&-item
			list-style none
			position relative
			line-height 3
			
		&.sub-navigation
			margin-top 0
			text-transform capitalize
			margin-left 5vw
			
	&__link
		color inherit
		padding 3vw 10vw
		position relative
		text-decoration none
				
	&.open
		transform translateX(0)

		
	&-button
		position fixed
		top 5vw
		right 4vw
		width 40px
		height 55px
		border 0
		background 0
		z-index 100001
		
		&__text
			opacity 0
			width 1px 
			height 1px 
			font-size 1px
		
		&:before,
		&:after
			content ""
			position absolute
			left 0
			width 40px
			height 6px
			transform rotate(0)
			transition all 0.35s bounceTransition
		
		&:before
			border-top 18px double black
			
		&:after
			top 35px
			border-bottom 6px solid black
			
		&.open
			&:before
				transform rotate(45deg)
				border-top 6px solid white
				top 33px
				
			&:after
				transform rotate(-45deg)
				border-color white
				top 28px
				
@media all and (min-width: 767px) 

	.navigation
		&__list
			font-size 3vw
			
@media all and (min-width: 980px) 

	.navigation
		display flex
		transform translateX(0)
		color gray
		height auto
		background transparent
		flex-direction row
		position relative
		
		&-button
			display none
			
		&__list
			font-size 1vw
			flex-direction row
			margin 0
		
			&-item
				line-height 1.75
				
		&__link
			padding 1vw 2vw
			
			&:after
				transition all .35s ease-in-out
				content ''
				width 100%
				height 3px
				background pink
				position absolute
				bottom -2px
				left 0
				transform translateY(-2px)
				opacity 0
				z-index 120
			
			&:hover:after
				opacity 1
				transform translateY(0)

	.dropdown
		box-shadow boxShadow
		position absolute
		top 35px
		width 100%
		background white
		transition all .75s ease-in-out
		
		.open
			max-height 400px
			opacity 1
			z-index 100
			
		.navigation__list
			padding 0
			
			&-item 
				transform translateX(0)
				transition all .35s ease-in-out
			
				&:hover
					background pink
					
					.navigation__link
						color white

						&:after
							height 0
						
				
		.navigation__link
			padding 1vw
			display block
			color gray
			transition all .35s ease-in-out
			
			&:after
				height 0
			
