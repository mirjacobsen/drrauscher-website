.navigation
	margin-bottom 3vw
	
	&__list
		display flex
		font-size 1vw
		justify-content center
		padding-left 0
		text-transform uppercase
		width 100%
		
		&-item
			list-style none
			position relative
			
	&__link
		color black
		padding .5vw 3vw
		position relative
		text-decoration none
		
		&:hover
			+ .dropdown
				max-height 400px
				opacity 1

			&:after
				background pink
				bottom -2px
				content ''
				height 3px
				left 0
				position absolute
				width 100%
				

.dropdown
	background-color white
	box-shadow boxShadow
	max-height 0
	opacity 0
	position absolute
	top 25px
	transition all .5s ease
	width 100%
	z-index 100
	
	&:hover
		max-height 400px
		opacity 1
	
	.navigation__list
		flex-direction column
		padding 0
		
		&-item:hover
			background pink
			
			.navigation__link
				color white

				&:after
					height 0
			
	.navigation__link
		padding 1vw
		display block