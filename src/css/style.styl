// Import all partials
@require './_*.styl'

body
	font-family montserrat
	
.header
	display flex
	flex-wrap wrap
	width 100%
	justify-content center
    
	&__title
		font-family playfair
		width 100%
		font-size 2.5vw
		display flex
		justify-content center
		margin 3vw 0
		
.banner__image 
	width 100%

.navigation
	margin-bottom 3vw
	
	&__list
		display flex
		width 100%
		justify-content center
		font-size 1vw
		text-transform uppercase
		
		&-item
			list-style none
			
	&__link
		color black
		text-decoration none
		padding .5vw
		position relative
		
		//TODO: add transition if not using JS dropdown effect for this	
		&:hover
			&:after
				content ''
				width 100%
				height 3px
				background pink
				position absolute
				bottom -2px
				left 0