// Import all partials
@require './_*.styl'

body
	font-family montserrat
	line-height 2
	
h1,
h2,
h3
	font-family playfair
	
h3
	font-size 4vw
	
a 
	color inherit
	
.subtitle
	font-size: 4.5vw;
	width 100%

.page-content
	display flex
	flex-wrap wrap
	justify-content center

.list
	margin-bottom 6vw
	padding-left 10px
	font-size 3.5vw
	width 100%
	
	&__ordered
		padding-left 0
		font-size 3.5vw
	
	&__item
		line-height 2
		list-style none
		padding-bottom 20px
		
		&__title
			font-weight bold
			
.text 
	margin-bottom 5vw
	font-size 4vw
	

.about__image, //remove this class
.image
	padding-bottom 3vw
	width 100%
	
.text-link
	color black
	
	&:hover
		color green

@media all and (min-width: 767px) 
			
	.list	
		font-size 3vw
		
	.text	
		font-size 3vw

@media all and (min-width: 980px)
	body 
		line-height 1.5
	
	h3,
	.subtitle
		font-size 2vw
	
	.text
		margin-bottom 2vw
		font-size 1.5vw
		
	.list
		font-size 1.5vw
		
		&__item
			padding-bottom 10px
		
		&__ordered
			font-size 1.25vw
			
@media all and (min-width: 1200px)

	h3,
	.subtitle
		font-size 18px
	
	.text
		margin-bottom 16px
		font-size 18px
		
	.list
		font-size 18px
		margin-bottom 10px
		
		&__item
			padding-bottom 10px
		
		&__ordered
			font-size 18px