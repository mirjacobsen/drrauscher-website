@media all and (min-width: 767px) 

	.footer
		.navigation__list
			font-size 3vw

@media all and (min-width: 980px)
	.footer
		flex-wrap nowrap
		
		.__bdS5YAT__pip
			transform translateY(-10px)
			transition all .35s cubic-bezier(0.68, -0.55, 0.27, 1.55)
			
		svg
			height auto
		
		svg,
		&__map
			width 35vw
			margin-left -8vw
			order 1
			
			&:hover
				.__bdS5YAT__pip
					transform translateY(0)
			
		.navigation__link
			font-family playfair
			
			&:after
				transform translateY(0) 
				transition all .25s ease-in-out
			
			&:hover:after
					background white
					height 1px

			// Dropdown titles of sections that aren't actually links					
			&--dropdown:after
				height 0
				color transparent
					
			&--dropdown:hover:after
				height 0
				color transparent
				
		.sub-navigation
			.navigation__link
				font-family montserrat
				font-weight: 200;
			
		&__navigation
			border-bottom 0
			order 10
			
		.navigation__list
			font-size 1.5vw
			margin-top 0
			
			&-item
				line-height 1.75
			
			&.sub-navigation
				margin-left 3vw
							
		&__contact
			padding-bottom 0
			order 5
			
	.copyright
		font-size 1.5vw
		font-weight 100
		
@media all and (min-width: 1200px)

	.footer
		.navigation__list
			font-size 16px
			
			&.sub-navigation
				margin-left 10px
				
	.copyright
		font-size 16px