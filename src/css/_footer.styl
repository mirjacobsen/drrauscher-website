@require './_variables.styl'

.footer
	// background lightGreen
	background pink
	display flex
	justify-content space-around
	flex-wrap wrap
	padding 6vw
	width 100%
	order 20
	color white
	
	&__navigation
		order 1
		border-bottom 1px solid white
		
	&__contact
		order 5
		color white
		font-size 3.5vw
		padding-bottom 10vw
		
		h3
			text-transform uppercase
			
		.link 
			color white
		
		.list
			border-bottom 1px solid white
			padding-bottom 4vw
			
			&__item
				display flex
				justify-content space-between
				
				&__title
					font-family playfair
		
	&__map
		order 10
	
	.navigation__list
		flex-direction column
		font-size 4vw
	
	.navigation__link
		padding 0
		
	.dropdown
		background-color transparent
		box-shadow none
		max-height initial
		opacity 1
		position relative
		top 0
		width auto
		
		.navigation__list
			padding-left 8vw
			
		.navigation__link
			font-family montserrat
			font-size 3.5vw
			text-transform: initial;
	
	svg
		width 130%
		margin-left -15%
		height 100vw // for IE
		
.copyright
	background black
	display flex
	justify-content space-between
	width 100%
	color lightPink
	font-size 2vw
	padding 1vw 2vw
	font-weight 300
	
	&__link
		text-decoration none
		
		&:hover
			text-decoration underline
		
	
