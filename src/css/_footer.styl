@require './_variables.styl'

.footer
	background pink
	display flex
	justify-content space-between
	flex-wrap wrap
	padding 6vw
	width 100%
	order 20
	color white
	
	.text 
		font-weight: 200;
	
	&__navigation
		order 1
		border-bottom 1px solid white
		
	&__contact
		order 5
		color white
		font-size 3.5vw
		padding-bottom 10vw
		
		h3
			text-transform uppercase
			
		.link 
			color white
		
		.list
			border-bottom 1px solid white
			padding-bottom 4vw
			
			&__item
				display flex
				justify-content space-between
				
				&__title
					font-family playfair
		
	&__map
		order 10
	
	.navigation__list
		flex-direction column
		font-size 4vw
	
	.navigation__link
		padding 0
		
	.dropdown
		background-color transparent
		box-shadow none
		max-height initial
		opacity 1
		position relative
		top 0
		width auto
		
		.navigation__list
			padding-left 8vw
			
		.navigation__link
			font-family montserrat
			font-size 3.5vw
			text-transform initial
			
	/* TODO: Why can't I use a class - 
		the SVG inliner seems to be messing up the class name, 
		but ID's are okay. */
	#map
		width 130%
		margin-left -15%
		height 100vw // for IE
		
@media all and (min-width: 767px) 

	.footer
		.navigation__list
			font-size 3vw

@media all and (min-width: 980px)
	.footer
		flex-wrap nowrap
		padding 3vw
		
		.column-3
			max-width none
			
		#pip
			transform translateY(-10px)
			transition all .35s bounceTransition
			
		#map
			height auto
		
		#map,
		&__map
			width 35vw
			margin-left -5vw
			order 1
			
			&:hover
				#pip
					transform translateY(0)
			
		.navigation__link
			font-family playfair
			
			&:after
				transform translateY(0) 
				transition all .25s ease-in-out
			
			&:hover:after
				background white
				height 1px

			// Remove hover effect for dropdown titles of sections that aren't actually links					
			&--dropdown:after
				height 0
				color transparent
					
			&--dropdown:hover:after
				height 0
				color transparent
				
		.sub-navigation
			.navigation__link
				font-family montserrat
				font-weight: 200;
			
		&__navigation
			border-bottom 0
			order 10
			
		.navigation__list
			font-size 1.5vw
			margin-top 0
			
			&-item
				line-height 1.75
			
			&.sub-navigation
				margin-left 10px
							
		&__contact
			padding-bottom 0
			order 5
			padding-left 4vw
			
			.subtitle
				font-weight 200
				margin-top 0
		
@media all and (min-width: 1200px)

	.footer
		justify-content space-around
		
		&__map
			margin-left -10vw
		
		.navigation__list
			font-size 16px
