@media all and (min-width: 980px)
	.footer
		flex-wrap nowrap
		
		svg,
		&__map
			width 35vw
			margin-left -8vw
			
		.navigation__link:hover
			text-decoration underline
			
		&__navigation
			border-bottom 0
			
		&__contact
			padding-bottom 0
